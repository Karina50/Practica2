void main() 
{
//Nombre escuela: Universidad tecnologica Metropolitana
/7Asignatura: Desarrollo móvil multiplataforma
//Nombre del maestro: Joel Chuc
//Nombre de la actividad: Conversión a binarios
//Nombre del alumno: Karina Moo Uc
//5-C
//Parcial 1

  int decimal = 287; //Se coloca el valor decimal

  int binario = 0;

  int i = 1;

  while (decimal > 0) 
  {
    binario = binario + (decimal % 2) * i;

    decimal = (decimal / 2).floor();

    i = i * 10;
  }

  print('El resultado del valor convertido a binario es: $binario');
}
